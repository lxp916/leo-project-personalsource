<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="YUMXPSViewer.Controls.SubControls.FullScreenButtonControl"
	d:DesignWidth="50" d:DesignHeight="50">

	<Grid x:Name="LayoutRoot">
		<Button x:Name="FullScreenButton" Margin="5,0,0,0" Click="FullScreenButton_Click">
			<Image Source="/ReaderControl;component/Images/application_osx_double.png" Stretch="None" />
			<ToolTipService.ToolTip>
				<ToolTip Placement="Bottom">
					<TextBlock Text="Full-screen mode"/>
				</ToolTip>
			</ToolTipService.ToolTip>
		</Button>
	</Grid>
</UserControl>
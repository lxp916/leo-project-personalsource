<UserControl x:Class="YUMXPSViewer.Controls.SubControls.OpenLocalFileButtonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50" d:DesignWidth="50">
    
    <Grid x:Name="LayoutRoot">
        <Button x:Name="OpenLocalFileButton" Margin="5,0,0,0" Click="OpenLocalFileButton_Click">
            <Image Source="/ReaderControl;component/Images/folder_up.png"  Stretch="None" />
            <ToolTipService.ToolTip>
                <ToolTip Placement="Bottom">
                    <TextBlock Text="Open local file"/>
                </ToolTip>
            </ToolTipService.ToolTip>
        </Button>
    </Grid>
</UserControl>
